<!-- app/views/carts/index.html.erb -->

<h1>Your Shopping Cart</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart_item| %>
      <% product = cart_item.product %>
      <% next unless product %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <%= bootstrap_form_for(cart_item, url: update_quantity_cart_path(cart_item), method: :patch) do |form| %>
            <%= form.number_field :quantity, class: 'form-control', min: 1 %>
            <%= form.submit 'Update', class: 'btn btn-primary update-quantity-btn' %>
          <% end %>
        </td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= number_to_currency(cart_item.quantity * product.price) %></td>
          
        <td><%= button_to "Delete", cart_path(cart_item), method: :delete, data: { turbo: false }, class: "btn btn-sm btn-danger" %></td>
</td>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Checkout', checkout_path, class: 'btn btn-success checkout-btn' %>
