
<h1>Edit Wishlist Item</h1>

<%= bootstrap_form_with(model: @wishlist_item, url: wishlist_path(@wishlist_item), method: :patch, local: true) do |form| %>
  <%= form.hidden_field :product_id, value: @wishlist_item.product.id %>

  <div class="field">
    
    <%= form.number_field :quantity %>
  </div>

  <!-- Other form fields for WishlistItem -->

  <div class="actions">
    <%= form.submit 'Update Wishlist Item' %>
  </div>
<% end %>
